\gdef\registerColors#1#2{
    %\globalcolorstrue %% colors, colors everywhere :D
    \foreach \name/\r/\g/\b in #1 {
        \ifthenelse{\equal{\name}{}}{}{
            \typeout{Register #2Color: \name\space with R: \r, G: \g, B: \b}
            \xglobal\providecolor{\name}{RGB}{\r,\g,\b}
        }
    }
}

\gdef\updateColors#1#2{
    %\globalcolorstrue %% colors, colors everywhere :D
    \foreach \name/\r/\g/\b in #1 {
        \ifthenelse{\equal{\name}{}}{}{
            \typeout{Register #2Color: \name\space with R: \r, G: \g, B: \b}
            \xglobal\definecolor{\name}{RGB}{\r,\g,\b}
        }
    }
}

