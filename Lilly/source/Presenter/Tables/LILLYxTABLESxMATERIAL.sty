\def\MNHeaderRow{\rowfont{\normalfont\bfseries\leavevmode\@LILLY@rowfont@specs}\rowcolor{NextHeaderColor}\@ifstar{}{\Gape[.5mm][.25mm]{}}{\hspace*{-2.3em}\textcolor{HeaderColor!40!white}{$\blacktriangledown$}}\hspace*{1.4em}\;}
