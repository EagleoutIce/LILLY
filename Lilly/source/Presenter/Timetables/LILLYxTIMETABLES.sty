\DeclareDocumentCommand{\RawTimeTableEvent}{%
    O{} % EventKeys :D
    m % Table Name
}{%
    \xdef\@lilly@ttables@currenttable{#2}
    % Set the pgfkeys
    \pgfkeys{/lillyxTIMETABLES/Event, defaults, #1}%
    % First of all increase the current event counter for the table:
    \stepcounter{@#2@maxcount}
    % create the new Event. It will expand the pgfkeys, to make persisting redundant
    % First, we will check if the double-layer positioning does work, it needs at least 1.25 in height :d
    \pgfmathparse{\lillyxTimetablesEventxheight>=1.25}
    \ifnum\pgfmathresult=1% double sided layout :D
        \expandafter\xdef\csname @#2@event@\arabic{@#2@maxcount}\endcsname{%
            % execute precode:
            \lillyxTimetablesEventxprecode%

            % draw the colored background
            \noexpand\draw[fill=\lillyxTimetablesEventxbgcolor,fill opacity=\@eventopacity] (\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth/2,\lillyxTimetablesEventxy+0.625) rectangle ++ (\@@weekdwidth,-\lillyxTimetablesEventxheight);

            % Draw the title
            \noexpand\node at(\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth,\lillyxTimetablesEventxy+0.33) {\noexpand\fontsize{6.5pt}{6.5pt}\noexpand\selectfont\noexpand\parbox{\@@weekdwidth cm-0.25cm}{\noexpand\centering\lillyxTimetablesEventxtitle}};

            % Draw the first extra
            \noexpand\node[right] at(\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth/2,\lillyxTimetablesEventxy-0.45) {\noexpand\fontsize{4pt}{3pt}\noexpand\selectfont\lillyxTimetablesEventxextrafirst};
            % Draw the second extra
            \noexpand\node[left] at(\@@weekdwidth*\lillyxTimetablesEventxday+1.5*\@@weekdwidth,\lillyxTimetablesEventxy-0.45) {\noexpand\fontsize{4pt}{3pt}\noexpand\selectfont\noexpand\scshape\lillyxTimetablesEventxextrasecond};
            % Draw the third extra
            \noexpand\node at(\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth,\lillyxTimetablesEventxy-0.02) {\noexpand\fontsize{4pt}{3pt}\noexpand\selectfont\noexpand\vphantom{Ig}\lillyxTimetablesEventxextrathird};

            % execute postcode
            \lillyxTimetablesEventxpostcode%
        }%
    \else
        \expandafter\xdef\csname @#2@event@\arabic{@#2@maxcount}\endcsname{%
            % execute precode:
            \lillyxTimetablesEventxprecode%

            % draw the colored background
            \noexpand\draw[fill=\lillyxTimetablesEventxbgcolor,fill opacity=\@eventopacity] (\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth/2,\lillyxTimetablesEventxy+0.625) rectangle ++ (\@@weekdwidth,-\lillyxTimetablesEventxheight);

            % Draw the title
            \noexpand\node[right] at(\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth/2,\lillyxTimetablesEventxy+0.4) {\noexpand\fontsize{7pt}{5pt}\noexpand\selectfont\lillyxTimetablesEventxshorttitle};

            % Draw the first extra
            \noexpand\node[right] at(\@@weekdwidth*\lillyxTimetablesEventxday+\@@weekdwidth/2,\lillyxTimetablesEventxy+0.15) {\noexpand\fontsize{4pt}{3pt}\noexpand\selectfont\lillyxTimetablesEventxextrafirst};
            % Draw the second extra
            \noexpand\node[left] at(\@@weekdwidth*\lillyxTimetablesEventxday+1.5*\@@weekdwidth,\lillyxTimetablesEventxy+0.15) {\noexpand\fontsize{4pt}{3pt}\noexpand\selectfont\noexpand\scshape\lillyxTimetablesEventxextrasecond};
            % Draw the third extra
            \noexpand\node[left] at(\@@weekdwidth*\lillyxTimetablesEventxday+1.5*\@@weekdwidth,\lillyxTimetablesEventxy+0.4) {\noexpand\fontsize{4pt}{3pt}\noexpand\selectfont\noexpand\vphantom{Ig}\lillyxTimetablesEventxextrathird};

            % execute postcode
            \lillyxTimetablesEventxpostcode%
        }%
    \fi
}

