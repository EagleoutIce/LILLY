    \getRegisteredOrnaments%
    \tabreset%
    \foreach \animal in \lillyxlist {%
        \ifthenelse{\equal{\animal}{}}{}{%
        \etabadd{\animal}%
        \tabadd{& \textbackslash orna}%
        \etabadd{\animal}%
        \tabadd{&\csname orna}%
        \etabadd{\animal}%
        \tabadd{\endcsname[width=2cm]\\}%
        }
    }%
    \begin{mltable}{lt>{\noexpand\relax\noexpand\hfill}X}[Name & Command & Ornament]
    \tabprint
    \end{mltable}
    \tabreset
}


