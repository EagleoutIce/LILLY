%% Info-Boxen ähneln den normalen Boxen für Definition und Bemerkung unterscheiden sich allerdings grundlegend darin, dass das
%% Design statisch über pgfkeys gesetzt werden kann und sie dafür gedacht sind in Kombination mit LILLYxBOXxMARGIN und
%% LILLYxEMBLEMS verwendet zu werden.

\newcounter{CTRxLILLYxTOTALINFOBOXES}
\setcounter{CTRxLILLYxTOTALINFOBOXES}{0}

%% Die Werte werden wieder für jede InfoBox persistiert, damit das Design variiert werden kann, je nach Geschmack :D
\pgfkeys{%
    /lillyxINFOBOXES/.is family, /lillyxINFOBOXES,
    draw/.store in=\lillyxInfoboxesxdraw, % shouldn't be set directly :D
    style/.is choice,
    style/none/.style={draw=None}, % No Background whatsoever :D
    style/limerence/.style={draw=Limerence}, % Limerence-Like Appearance
    style/framed/.style={draw=Framed}, % Colored Frame (includes option for background)
    bgcolor/.store in=\lillyxInfoboxesxbgcolor, % background color
    bordercolor/.store in=\lillyxInfoboxesxbordercolor, % bordercolor this will represent the boxcolor
    fgcolor/.store in=\lillyxInfoboxesxfgcolor, % foreground color
    titlefont/.store in=\lillyxInfoboxesxtitlefont,% font to be used for the title
    textfont/.store in=\lillyxInfoboxesxtextfont,% font to be used for the text
    preCode/.store in=\lillyxInfoboxesxprecode, % code to be executed before the box
    inCode/.store in=\lillyxInfoboxesxincode, % code to be executed in the Box, before any content (but after title)
    titleCode/.store in=\lillyxInfoboxesxtitlecode, % code to be executed in the Box, after the title (usually newline)
    outCode/.store in=\lillyxInfoboxesxoutcode, % code to be executed in the box, after the content
    postCode/.store in=\lillyxInfoboxesxpostcode, % code to be exectued after the box
    emblem/.store in=\lillyxInfoboxesxemblem, % Emblem, which should be set inside of the Box
    marker/.store in=\lillyxInfoboxesxmarker, % The FootnoteMarker which should be set in the Text. It will use bordercolor as highlight
    defaults/.style={%
        style/limerence, bgcolor={MudWhite!75}, fgcolor={Charcoal}, bordercolor={DebianRed},%
        titlefont={\normalfont\bfseries}, textfont={\normalfont}, %
        preCode={}, inCode={}, titleCode={\leavevmode\smallskip\newline}, outCode={}, postCode={}, %
        emblem={}, marker={\textbf{!}} % they won't be marked as required as they aren't from an technical perspective, even if they should be theoreticall given for all Boxes :D
    }
}%% All those values will be persisted with 'lillyxINFOBOXESx'-Prefix :D

\DeclareDocumentCommand{\NewInfoBox}{%
    O{} %% List of Infobox-Keys
    O{} %% Optional Arguments that should be passed to the InfoBox code (tikz)
    m   %% Name of the InfoBox-environment it will be constructed taking 2 args. Furthermore there will be a starred version, which will be placed in the margin using LILLYxBOXxMARGIN
}{%
    \pgfkeys{/lillyxINFOBOXES, defaults, #1}%
    %% We will now persist the Codes, the 'draw' command has to take 5 arguments :D
    \expandafter\xdef\csname lillyxINFOBOXESx#3xDraw\endcsname{\lillyxInfoboxesxdraw}%                                      Draw-Routine
    \expandafter\xdef\csname lillyxINFOBOXESx#3xBgColor\endcsname{\lillyxInfoboxesxbgcolor}%                                BackgroundColor
    \expandafter\xdef\csname lillyxINFOBOXESx#3xFgColor\endcsname{\lillyxInfoboxesxfgcolor}%                                ForegroundColor
    \expandafter\xdef\csname lillyxINFOBOXESx#3xBorderColor\endcsname{\lillyxInfoboxesxbordercolor}%                        BorderColor
    % Defenitly make the persistence library, it's crucial to expand the arguments ONCE to get the values of the temporary commands and persist them
    % Fonts
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xTitleFont\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxtitlefont}%                            TitleFont (unexpanded)
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xTextFont\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxtextfont}%                              TextFont (unexpanded)
    % Codes
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xPreCode\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxprecode}%                                PreCode (unexpanded)
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xInCode\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxincode}%                                  InCode (unexpanded)
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xTitleCode\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxtitlecode}%                            TitleCode (unexpanded)
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xOutCode\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxoutcode}%                                OutCode (unexpanded)
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xPostCode\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxpostcode}%                              PostCode (unexpanded)
    % Marking Stuff
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xEmblem\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxemblem}%                                  Emblem (unexpanded)
    \expandafter\expandafter\expandafter\gdef\expandafter\expandafter\csname lillyxINFOBOXESx#3xMarker\expandafter\expandafter\endcsname\expandafter{\lillyxInfoboxesxmarker}%                                  Marker (unexpanded)

    % Debug Output:
    \foreach \x in {Draw,BgColor,BorderColor,FgColor,TitleFont,TextFont,PreCode,InCode,TitleCode,OutCode,PostCode,Emblem,Marker} {% Maybe make a Persisting-Library? :D
        \debugout{[InfoBox:#3] \x: [\csname lillyxINFOBOXESx#3x\x\endcsname]}
    }

    % #1 Optional Arguments
    % #2 Title
    \global\DeclareDocumentEnvironment{#3}{O{} m}{\ignorespaces%
        \begin{AbstractInfoBoxDrawer}{#3}{##1}{##2}
        }{\end{AbstractInfoBoxDrawer}}
    \global\DeclareDocumentEnvironment{#3*}{O{} m}{\ignorespaces%
        \AbstractInfoMarginBoxDrawer{#3}{##1}{##2}
        }{\endAbstractInfoMarginBoxDrawer}
}

